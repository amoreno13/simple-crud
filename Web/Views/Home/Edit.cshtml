@model Domain.Entities.Usuario
<div class="row">
    <form method="post" action="@Url.Action("Edit", "Home")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="usuarioId" value="@Model.UsuarioId" />
        <div class="form-group">
            <label for="exampleInputEmail1">Nome</label>
            <input class="form-control" id="nome" name="nome" value="@Model.Nome">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="@Model.Email">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Telefone</label>
            <input class="form-control" id="telefone" name="telefone" value="@Model.Telefone">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

